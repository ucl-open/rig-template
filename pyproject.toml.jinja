[build-system]
requires = ["uv_build>=0.8.22"]
build-backend = "uv_build"

[project]
name = "{{ python_package_name }}"
description = "A library that defines a ucl-open data schema for the {{ project_name }} experiment."
authors = [ {name = "{{ author_name }}", email = "{{author_email}}"}]
license = "MIT"
requires-python = ">=3.11, <3.12"
classifiers = [
    "Programming Language :: Python :: 3.11",
    "Operating System :: Microsoft :: Windows",
]
version = "0.0.0-rc1"
readme = {file = "README.md", content-type = "text/markdown"}

dependencies = [
  "swc-aeon>=0.1.0",
  "ucl-open-rigs",
  "pydantic-settings",
  "aind_behavior_services>=0.12, <0.13"
]

# [project.urls]
# Documentation = "https://ucl-open.github.io/{{ dotnet_full_name }}/"
# Repository = "https://github.com/UclOpen/{{ dotnet_full_name }}/"
# Issues = "https://github.com/UclOpen/{{ dotnet_full_name }}/issues"
# Changelog = "https://github.com/UclOpen/{{ dotnet_full_name }}/releases"
[project.scripts]
{{ project_name }} = "{{ python_folder_name }}.cli:main"

[tool.ruff]
line-length = 120
target-version = 'py311'

[tool.ruff.lint]
extend-select = ['Q', 'RUF100', 'C90', 'I']
extend-ignore = []
mccabe = { max-complexity = 14 }
pydocstyle = { convention = 'google' }

[tool.codespell]
skip = '.git,*.pdf,*.svg,./bonsai,*.bonsai,./docs/_build,uv.lock,*Generated.cs'
ignore-words-list = 'nd'

[tool.uv]
required-version = '>=0.8.4'

[tool.uv.sources]
ucl-open-rigs = {git = "https://github.com/ucl-open/ucl_open_rigs/", branch = "test_build"}
swc-aeon = { git = "https://github.com/SainsburyWellcomeCentre/aeon_api.git", branch = "main" }